@model IEnumerable<Crud_MVC_EF.Models.Student>

<h2>Index</h2>
@Html.ActionLink("Create", "Create","Student",null,new { @class = "btn btn-success"})
<div>
    <table class="table">
        <tr>
            <th>Student Id</th>
            <th>Student Name</th>
            <th>Student Gender</th>
            <th>Education</th>
            <th>Workstatus</th>
            <th>Student Email</th>
            <th>Student Phone </th>
            <th>Action</th>
        </tr>
        @foreach(Student m in Model)
        {
            <tr>
                <td>@m.StudentId</td>
                <td>@m.StudentName</td>
                <td>@m.Gender</td>
                <td>@m.Education</td>
                <td>@m.WorkStatus</td>
                <td>@m.StudentEmail</td>
                <td>@m.StudentPhone</td>
                <td>
                    @Html.ActionLink("Edit", "Edit_Get", "Student", new { StudentId = m.StudentId }, new { @class = "btn btn-primary" })
                    @* @Html.ActionLink("Delete", "Delete", "Student", new { StudentId = m.StudentId }, new { @class = "btn btn-danger" }) *@
                    <a class="btn btn-danger" asp-action="Delete" asp-route-StudentId="@m.StudentId" onclick="return confirmDelete();">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>


<script type="text/javascript">
    
    function confirmDelete() {
        return confirm("Are you sure you want to delete this item?");
    }

</script>